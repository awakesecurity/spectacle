  type:                exitcode-stdio-1.0
  hs-source-dirs:      test/integration
  main-is:             Main.hs

  other-modules:
    Specifications.BitClock
    Specifications.Diehard
    Specifications.SimpleClock
    Specifications.Status

  build-depends:
      spectacle
    , hashable
    , hedgehog
    , tasty
    , tasty-hedgehog
